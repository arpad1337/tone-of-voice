{
    "compilerOptions": {
      "moduleResolution": "node",
      "target": "es6",
      "module": "commonjs",
      "lib": ["esnext", "DOM"],
      "strict": true,
      "sourceMap": true,
      "declaration": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "declarationDir": "./dist",
      "outDir": "./dist",
      "noImplicitAny": false,
      "typeRoots": ["./src/types", "node_modules/@types"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
